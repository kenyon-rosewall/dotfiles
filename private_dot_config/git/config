[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate --all
    rb = rebase
    amend = commit --amend
    type = cat-file -t
    dump = cat-file -p
    rmtag = "!f() { git tag -d \"$1\" && git push origin :refs/tags/\"$1\"; }; f"

